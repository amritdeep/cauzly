<%= form_for(@user_image,:multipart => :true) do |f| %>
<fieldset><legend>Add new image</legend> 
  <%= render :partial => "shared/validation_msg" ,:locals =>{:obj => @user_image}%>
  <div class="control-group">
  	<div class="control-label">
  	<label>Upload Image  </label>
  	</div>
  	<div class="controls">
  	<%= f.file_field :attachment %>
  	<br/> 
  	<i> Max 2MB, Image Type:JPG, JPEG, PNG, GIF<i/>
  </div>
  </div>
  
    <div class="form-actions">
    <%= f.submit "Upload" %>
  </div>
  </fieldset>
<% end %>
