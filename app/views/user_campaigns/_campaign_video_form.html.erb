<div class="form-verticle well ">
    <%= form_for(@campaign_video ,:url => :addvideo_user_campaign) do |f| %>
    <fieldset>
        <legend>
            Add Video
        </legend>
        <%= render :partial=>"shared/validation_msg",:locals=>{:obj=>@campaign_video}%>

        <div civ class="control-group">
            <div class="control-label">
                <label>Video Url</label>
            </div>
            <div class="controls">
                <%= f.url_field :video_url,{:placeholder=>"Video url",:required=>true}%>
            </div>
        </div>
        <div civ class="control-group">
            <div class="control-label">
                <label>Video Title</label>
            </div>
            <div class="controls">
                <%= f.text_field :video_title%>
            </div>
        </div>
        <div class="form-actions">
            <%= f.submit "Save"%>
        </div>

    </fieldset>
    <%end%>

</div>
