<h3>Donations In <%=@campagin.title %></h3> 
<hr />

<% if !@campaign_donation.blank?%>
<div class="wordwrap">
<table class="table table-striped table-condensed">
  <tr class="yellow">
  	<th>Date</th>
    <th>Donated By</th>
    
    <th>Amount</th>
  	
  </tr>

<% @campagin_donations.each do |donation| 
donor = donation.donor
%>
<tr>
<td><%= donation.created_at.strftime("%m-%d-%Y") %></td>

<td>
			
			<%if !donor.profile_name.blank?%>
				<%= link_to donor.profile_name, profile_path(donor),:target => "_blank" %>
				
				<%end%>
				
			<%if donor.profile_name.blank?%>	
			<%= link_to "Donor", profile_path(donor),:target => "_blank" %>
			
				<%end%>
				
			</td>	

		
		


<td><%= number_to_currency(donation.amount, :precision => 2)  %></td>

</tr>
<% end %> 

</table>
<%= will_paginate @campaign_donations ,:renderer => BootstrapLinkRenderer %>

</div>
<%else%>
No donations received.
<%end%>
