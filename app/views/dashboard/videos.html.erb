<div class="">

 


  
<div id="addvideos" class="form-horizontal well box">
	
<%= form_for(@user,:url=>uservideos_path,:method=>:post) do |f| %>
  <fieldset><legend>Add Video</legend>
  <%= render :partial => "shared/validation_msg" ,:locals =>{:obj => @user}%>

	<%= f.fields_for :user_videos do |v|%>
		<%= render :partial => "user_video_fields",:locals=>{:f => v}%>
	<% end%>
	
	
	<% if current_user.user_videos.count < 6%>
		
		<%= link_to_add_fields "<span class='addmore btn'>Add  More<span> ".html_safe, f, :user_videos%>
	<%end%>
	
   
    <div class="form-actions">
    <%= f.submit "Update" %>
  </div>
  
</fieldset>
<% end %>
</div>
<p><br /></p>
 <% unless current_user.user_videos.nil? %>
  <div class="box">
        <h3>Added videos</h3>
<hr />
  <ul class="thumbnails">
      <% current_user.user_videos.each do |user_video|%>
          <% if user_video.video_url?%>
            <li>
            <div class="thumbnail user_video well">
                  <%= user_video.video_url_html  %>
            </div>
          </li>
          <% end %>
      <% end %>
      </ul>
      </div>
  <% end %>

</div>
