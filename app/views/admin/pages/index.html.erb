<div class="row-fluid">
<h3 class="pull-left">Pages</h3>
<%= link_to 'New Page', new_admin_page_path,:class=>"btn btn-primary pull-right" %>
</div>

<br/>

<table class="table-condensed table table-bordered">
  <tr>
    <th>Page title</th>
    <th>Page name</th>
    
    
    <th></th>
   
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= link_to page.page_title,admin_page_path(page) %></td>
    <td><%= page.page_name %></td>
    
    
     <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_page_path(page) %>
         
    <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_page_path(page), confirm: 'Are you sure?', method: :delete %>
    
    
   </td>
   
  </tr>
<% end %>
</table>

<br />


