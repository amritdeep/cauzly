<%= tinymce_assets %>
<div class="form-horizontal">
<fieldset>
    <legend>Page</legend>


<%= form_for([:admin,@page]) do |f| %>
        <%= render :partial => "shared/validation_msg",:locals=>{:obj=>@page}%>

 

  <div class="control-group">
      
    <%= f.label "Title",:class=>"control-label"  %>
  
  
    <div class="controls">
        <%= f.text_field :page_title %>
  </div>
 </div>
 
 <div class="control-group">
      
     <%= f.label "Order",:class=>"control-label"  %>
  
    <div class="controls">
         <%= f.text_field :page_order %>
  </div>
 </div>
 
 
 <div class="control-group">
      
     <%= f.label "Name",:class=>"control-label"  %>
  
    <div class="controls">
         <%= f.text_field :page_name %>
  </div>
 </div>
 
 
 
 
 
 <div class="control-group">
      
    <%= f.label "Content",:class=>"control-label"  %>
 
    <div class="controls">
         <%= f.text_area  :page_content,:class=> "input-xxlarge tinymce" ,:size =>"80x20" %>
<%= tinymce%>
  </div>
 </div>
 
 
 
 
 
 
 
  
 
  <div class="form-actions">
    <%= f.submit "Save",:class=>"btn-primary" %>
  </div>
  <%end%>
  </fieldset>
</div>

