<div class="form-horizontal">
<%= form_for([:admin,@city]) do |f| %>
  <%= render :partial =>"shared/validation_msg" ,:locals =>{:obj=>@city} %>
  <div class="control-group">
    <%= f.label :state_id ,:class=>"control-label"%>
    <div class="controls">
    	<%= f.collection_select :state_id ,State.all,:id,:name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name  ,:class=>"control-label"%>
    <div class="controls">
    	<%= f.text_field :name %>
	</div>
  </div>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
