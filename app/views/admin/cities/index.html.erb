<%= link_to 'New City', new_admin_city_path,:class=>"btn pull-right" %>

<h3>Listing cities</h3>
<hr />
<table class="table table-condensed table-striped">
  <tr>
    <th>State</th>
    <th>City</th>
    <th>Actions</th>
  </tr>
<% @cities.each do |city| %>
  <tr>
  	<td><%= link_to city.state.name ,admin_state_path(city.state) %></td>
    <td><%= city.name %></td>
    <td><%= link_to '<i class="icon-view"></i>Show'.html_safe, admin_city_path(city),:class=>"" %> 
    	<%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_city_path(city),:class=>"edit button" %>
    	<%= link_to '<i class="icon-trash"></i>'.html_safe, admin_city_path(city), confirm: 'Are you sure?', method: :delete ,:class => "delete button" %>
    </td>
  </tr>
<% end %>
</table>
