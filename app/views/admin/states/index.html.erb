
<%= link_to 'New State', new_admin_state_path ,:class=>"btn pull-right" %>

<h3>Listing states</h3>
<br />
<table class="table table-striped table-condensed">
  <tr>
    <th>S.N.</th>
    <th>State</th>
    <th>Actions</th>
  </tr>
<%cnt=0%>
<% @states.each do |state| %>
<%cnt=cnt+1%>
  <tr>
  	<td><%= cnt %></td>
    <td><%= state.name %></td>
    <td>
    	
    	<%= link_to 'Cities', admin_state_path(state) ,:class=>"icon_view"%>
    	<%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_state_path(state),:class=>"icon_edit" %>
    	<%= link_to '<i class="icon-trash"></i>'.html_safe, admin_state_path(state), confirm: 'Are you sure?', method: :delete,:class=>"icon-delete" %></td>
  </tr>
<% end %>
</table>
